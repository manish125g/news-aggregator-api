    "components": {
        "schemas": {
            "ArticleResource": {
                "title": "Article",
                "description": "Schema representing an article",
                "properties": {
                    "id": {
                        "description": "ID of the article",
                        "type": "integer",
                        "example": 1
                    },
                    "author": {
                        "description": "Author of the article",
                        "type": "string",
                        "example": "John Doe"
                    },
                    "title": {
                        "description": "Title of the article",
                        "type": "string",
                        "example": "Understanding OpenAPI"
                    },
                    "source": {
                        "description": "Source of the article",
                        "type": "string",
                        "example": "Tech News",
                        "nullable": true
                    },
                    "source_url": {
                        "description": "Source URL of the article",
                        "type": "string",
                        "format": "uri",
                        "example": "https://example.com/article-source",
                        "nullable": true
                    },
                    "description": {
                        "description": "Description of the article",
                        "type": "string",
